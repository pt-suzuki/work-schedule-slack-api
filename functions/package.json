{
  "name": "firebase_express_template",
  "scripts": {
    "lint": "eslint -c .eslintrc.json \"src/**/*.{js,ts,tsx}\" --quiet",
    "lint:fix": "eslint -c .eslintrc.json \"src/**/*.{js,ts,tsx}\" --quiet --fix",
    "test": "jest",
    "config:unset": "firebase functions:config:unset env",
    "config:set:personal": "npm run config:unset && firebase functions:config:set env=\"$(cat ./env.dev-personal.json)\"",
    "build": "rm -rf lib && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@slack/bolt": "^3.10.0",
    "@types/cors": "^2.8.12",
    "axios": "^0.26.1",
    "body-parser": "^1.19.2",
    "change-case": "^4.1.2",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-openapi-validator": "^4.13.6",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.19.0",
    "fs": "0.0.1-security",
    "pino": "^7.8.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/pino": "^7.0.4",
    "@types/shelljs": "^0.8.11",
    "@types/sinon": "^10.0.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "babel-jest": "^27.5.1",
    "cors": "^2.8.5",
    "eslint": "^8.11.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.2.3",
    "jest": "^27.5.1",
    "jest-localstorage-mock": "^2.4.19",
    "jsonc-parser": "^3.0.0",
    "pino-pretty": "^7.5.3",
    "prettier": "^2.5.1",
    "sinon": "^13.0.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.5",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.6.2"
  },
  "private": true,
  "jest": {
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "token": "true",
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.*(spec|test).[tj]s?(x)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
